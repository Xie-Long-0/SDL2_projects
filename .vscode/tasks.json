{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "MSVC 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/W3",
                "/EHsc",
                "/D", "SDL_MAIN_HANDLED", // 预定义宏，防止SDL_main修改入口函数
                "/Fo${fileDirname}\\${fileBasenameNoExtension}.obj",
                "/Fe${workspaceFolder}\\bin_msvc_x64\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/I${workspaceFolder}\\include",
                "/TC",
                "/utf-8",
                "/link",
                "/MACHINE:X64",
                // "/SUBSYSTEM:CONSOLE",
                "/LIBPATH:${workspaceFolder}\\lib_msvc_x64",
                "SDL2.lib",
                "SDL2main.lib",
                "SDL2test.lib",
                "SDL2_image.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "MSVC编译器"
        },
        {
            "type": "cppbuild",
            "label": "GCC 生成活动文件",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-DSDL_MAIN_HANDLED", // 预定义宏，防止SDL_main修改入口函数
                "${file}",
                "-o",
                "${workspaceFolder}\\bin_gcc_x64\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib_gcc_x64",
                "-lSDL2",
                "-lSDL2main",
                "-lSDL2_test",
                "-lSDL2_image"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "MinGW_GCC编译器"
        }
    ],
    "version": "2.0.0"
}
